func Fib(ctx context.Context, n int) int {
	ctx, span := otel.Tracer("app").Start(ctx, "Fib")
	defer span.End()

	if n == 0 || n == 1 {
		return 1
	}
	return Fib(ctx, n-1) + Fib(ctx, n-2)
}

