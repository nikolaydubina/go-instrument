func fib(n int) int {
	if n == 0 || n == 1 {
		return 1
	}
	return fib(n-1) + fib(n-2)
}

func OneLine(n int) int { return fib(n) }

func OneLineTypical(ctx context.Context, n int) (int, error) {
	ctx, span := otel.Tracer("app").Start(ctx, "OneLineTypical")
	defer span.End()
	return fib(n), nil
}

